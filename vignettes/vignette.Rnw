\section{Loading data}

\paragraph{Preliminaries.} 



<<req>>=
library(SIMLR)
data(test)
@

<<igraph, results='hide'>>=
library(igraph)
@

<<example>>=
set.seed(11111)
example = SIMLR(X=test$in_X, c=test$n_clust)
nmi_1 = compare(test$true_labs[,1], example$y$cluster, method="nmi")
@

<<image, fig.show='hide', fig.width=5, fig.height=5,results='hide'>>=
plot(example$ydata, 
	col = c(topo.colors(test$n_clust))[test$true_labs[,1]], 
	xlab = "SIMLR component 1",
	ylab = "SIMLR component 2",
	pch = 20,
	main="SIMILR 2D visualization for Test_1_mECS")
@

